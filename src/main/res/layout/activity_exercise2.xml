<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".exercise2">

    <android.support.v7.widget.Toolbar
        android:id="@+id/exercise2_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/upper_relative"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/exercise2_toolbar">

        <Button
            android:id="@+id/timer_button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="1dp"
            android:text="Timer" />

        <ProgressBar
            android:id="@+id/progressBar2"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="100dp"
            android:max="100"
            android:progress="0" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/middle_relative2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/down_relative"
        android:layout_below="@+id/upper_relative">


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/down_relative"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true">

    </RelativeLayout>

</RelativeLayout>